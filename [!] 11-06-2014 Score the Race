#Define accumulative variables and lists
teamCount = 0
team = []
scores = []


#Ask the user for the race's results
userinput = list(input("Input a string of uppercase letters that indicate the outcome of the race: "))

a = sorted(userinput)
print(a)
print(userinput)

for i in range (0, len(a)):
    if a[i] not in team:
        team.append(a[i])
        scores.append(0)
    if a[i] in team:
        teamCount += 1

for i in range(0, len(a)):
    for j in range(0, len(team)):
        if userinput[i] == team[j]:
            scores[j] += (i+1)

print(scores)

for i in range (0, len(team)):
    print (team[i], end='\t')
    print (format(scores[i]/len(team), '.2f'))

print("There are", len(team), "teams.")
print("There are", int(teamCount/len(team)), "players per team.")
